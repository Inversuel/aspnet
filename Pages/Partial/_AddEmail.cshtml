@model int

<button class="add-email-btn" data-id="@Model">
  Add Email
</button>

<div id="add-email-modal-@Model"
  class="hidden fixed w-[400px] h-[400px] left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 rounded-lg">
  <div class="w-[400px] h-80 bg-white p-10">
    <form class="flex flex-col justify-between h-full" id="add-email-form" asp-page-handler="addEmail"
      asp-route-id="@Model" method="post">
      <input type="hidden" name="id" value="@Model" />
      <div class="flex flex-col gap-4">
        <div class="flex justify-between">
          <h1 class="text-gray-700 text-sm font-bold flex items-center justify-center">Email - @Model</h1>
          <span class="add-email-x text-2xl font-bold cursor-pointer flex items-center justify-center"
            data-id="@Model">x</span>
        </div>
        <input
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          placeholder="Email Address" type="email" name="Email" />
      </div>
      <button data-id="@Model"
        class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
        id="add-email-submit" type="submit">Add Email</button>
    </form>
  </div>
</div>
