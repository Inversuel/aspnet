@page
@model RazorPagesAspnet.Pages.Edit.EditModel

@{
    ViewData["Title"] = "Edit";
}
<div class="relative isolate px-6 pt-32 lg:px-8 mx-auto flex flex-col items-center justify-center">
    <div class="text-center">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">Edit Person!</h1>
    </div>
    <div class="w-full max-w-lg flex flex-col items-center justify-center">
        <form method="post" class="w-full bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <input class="hidden" asp-for="Persons.Id" />
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-xs italic"></div>
            <div class="mb-4">
                <label asp-for="Persons.Imie" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="Persons.Imie"
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                    id="imie" />
                <span asp-validation-for="Persons.Imie" class="text-red-500 text-xs italic"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Persons.Nazwisko" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="Persons.Nazwisko"
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                    id="nazwisko" />
                <span asp-validation-for="Persons.Nazwisko" class="text-red-500 text-xs italic"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Persons.Opis" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="Persons.Opis"
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                    id="opis" />
                <span asp-validation-for="Persons.Opis" class="text-red-500 text-xs italic"></span>
            </div>
            <div class="flex items-center justify-between">
                <button
                    class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                    input type="submit">
                    Edit Person
                </button>
                <a asp-page="../Index"
                    class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
                    Back to List
                </a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
